    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^5.16.0",
    "eslint-config-blued-typescript": "^1.0.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^1.1.1",
