{
  "name": "hotdog-end",
  "version": "1.0.0",
  "description": "Node.js 后台项目",
  "main": "index.js",
  "scripts": {
    "start:local": "cross-env NODE_ENV=local npm run serve",
    "serve": "cross-env NODE_ENV=production node dist/server.js",
    "start": "pm2 start pm2.json --env production",
    "restart": "pm2 restart pm2.json --env production",
    "build": "npm run build-ts",
    "watch-node": "cross-env NODE_ENV=local nodemon dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "rm -rf dist & tsc -w",
    "lint": "yarn lint:eslint && yarn lint:tsc",
    "lint:eslint": "eslint ./src --ext .ts,.tsx --color --quiet --fix",
    "lint:tsc": "tsc --noEmit",
    "build:docs": "node docs/generate-docs.mjs",
    "deploy": "./script/deploy.sh",
    "test": "mocha -r ts-node/register test/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/liangxinwei/hotdog-backend"
  },
  "keywords": [],
  "author": "sivan.shanghai@gmail.com",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
