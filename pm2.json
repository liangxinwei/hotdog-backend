{
  "apps": [
    {
      "name": "hotdog",
      "cwd": "./",
      "script": "dist/server.js",
      "instances": "2",
      "error_file": "../logs/hotdog-error.log",
      "out_file": "../logs/hotdog-out.log",
      "env": {
        "NODE_ENV": "development",
        "PORT": 5000
      },
      "watch": [
        "dist"
      ],
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 5000
      },
      "log_date_format": "YYYY-MM-DD_HH:mm Z",
      "merge_logs": true
    }
  ]
}
