    "colors": "^1.4.0",
    "consolidate": "^0.15.1",
    "dayjs": "^1.8.23",
    "ejs": "^2.6.1",
    "kcors": "^2.2.2",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-multer": "^1.0.2",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "mysql2": "^1.6.5",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.7.7",
    "sequelize": "^5.21.5",
    "sequelize-typescript": "^1.1.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@types/chai": "^4.1.7",
    "@types/chai-http": "^4.2.0",
    "@types/consolidate": "0.0.35",
    "@types/core-js": "^2.5.0",
    "@types/jest": "^24.0.13",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^5.0.0",
    "@types/koa-compose": "^3.2.4",
